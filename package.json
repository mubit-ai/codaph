{
  "name": "codaph",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "bun run --workspaces build",
    "test": "bun run --workspaces test",
    "lint": "bun run --workspaces lint",
    "typecheck": "bun run --workspaces typecheck",
    "desktop:build": "bun run --cwd apps/desktop build",
    "desktop:start": "bun run --cwd apps/desktop start",
    "desktop": "bun run desktop:build && bun run desktop:start",
    "cli": "bun run --cwd tools/codaph-cli src/index.ts",
    "agent:status": "bun run ./tools/codaph-cli/src/append-agent-status.ts",
    "hooks:install": "bun run ./tools/codaph-cli/src/install-hooks.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
