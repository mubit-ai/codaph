{
  "name": "codaph",
  "private": true,
  "type": "module",
  "bin": {
    "codaph": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "lint": "tsc -p tsconfig.json --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "cli": "bun ./src/index.ts",
    "tui": "bun run cli tui",
    "agent:status": "bun run ./src/append-agent-status.ts",
    "hooks:install": "bun run ./src/install-hooks.ts"
  },
  "dependencies": {
    "@mubit-ai/sdk": "^0.1.1",
    "@openai/codex-sdk": "^0.104.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
